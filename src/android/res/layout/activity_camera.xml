<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_camera"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.realid.cameraviewer.CameraActivity">

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="210dp" />
    <RelativeLayout
        android:layout_below="@id/surfaceView"
        android:layout_marginTop="52dp"
        android:paddingLeft="48dp"
        android:paddingRight="48dp"
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <RelativeLayout
            android:layout_alignParentLeft="true"
            android:background="@drawable/ctrl_bg"
            android:padding="10dp"
            android:layout_width="180dp"
            android:layout_height="180dp">
            <ImageView
                android:id="@+id/btn_up"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:scaleType="centerInside"
                android:clickable="true"
                android:src="@drawable/selector_up"
                android:layout_width="48dp"
                android:layout_height="48dp" />

            <ImageView
                android:id="@+id/btn_left"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:clickable="true"
                android:src="@drawable/selector_left"
                android:layout_width="48dp"
                android:layout_height="48dp" />

            <ImageView
                android:id="@+id/btn_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:clickable="true"
                android:src="@drawable/selector_right"
                android:layout_width="48dp"
                android:layout_height="48dp" />

            <ImageView
                android:id="@+id/btn_down"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:scaleType="centerInside"
                android:clickable="true"
                android:src="@drawable/selector_down"
                android:layout_width="48dp"
                android:layout_height="48dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/btn_increase"
                android:scaleType="centerInside"
                android:clickable="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/selector_increase"
                android:layout_width="56dp"
                android:layout_height="56dp" />
            <ImageView
                android:id="@+id/btn_reduce"
                android:scaleType="centerInside"
                android:clickable="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/selector_reduce"
                android:layout_width="56dp"
                android:layout_height="56dp" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
